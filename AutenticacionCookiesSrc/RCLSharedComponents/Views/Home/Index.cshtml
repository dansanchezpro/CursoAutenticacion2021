@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <div class="form-group">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="form-group">
                <div>
                    @User.Identity.Name
                </div>
                <div>
                    (@String.Join(", ", User
                 .Claims.Where(c => c.Type ==
                System.Security.Claims.ClaimTypes.Role)
                 .Select(c => c.Value).ToArray()))
                </div>
            </div>
            <a class="btn btn-danger" asp-area=""
               asp-controller="account" asp-action="logout">
                Log out
            </a>
        }
        else
        {
            <a class="btn btn-success" asp-area=""
               asp-controller="account" asp-action="login">Log in</a>
        }
    </div>
    <div class=" form-group">
        <a class="btn btn-info" asp-area="" asp-controller="Home"
           asp-action="getdata">Public data</a>
        <a class="btn btn-info" asp-area="" asp-controller="Home"
           asp-action="getadmindata">Admin data</a>
        <a class="btn btn-info" asp-area="" asp-controller="Home"
           asp-action="getaccountantdata">Accountant data</a>
        <a class="btn btn-info" asp-area="" asp-controller="Home"
           asp-action="getsellerdata">Seller data</a>
    </div>
</div>